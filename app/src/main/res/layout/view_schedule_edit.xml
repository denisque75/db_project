<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/edit_delete_box"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/schedule_info_height"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/edit_schedule_subject_text_view"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/schedule_info_height"
                android:gravity="start|center"
                android:layout_marginStart="10dp"
                android:textSize="@dimen/schedule_group_entrance_text_size"
                android:text="Системный Анализ"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/edit_delete_box"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/edit_schedule_type_text_view"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/schedule_info_height"
                android:gravity="center"
                android:textSize="@dimen/schedule_group_entrance_text_size"
                android:layout_marginStart="25dp"
                android:text="ЛЗ"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/edit_schedule_subject_text_view"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/edit_schedule_room_text_view"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/schedule_info_height"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="25dp"
                android:gravity="center"
                android:text="542"
                android:textSize="@dimen/schedule_group_entrance_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/edit_schedule_type_text_view"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>