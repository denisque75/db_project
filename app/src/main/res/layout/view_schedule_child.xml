<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/schedule_subject_text_view"
            style="@style/ScheduleTextView" />

        <TextView
            android:id="@+id/schedule_teacher_text_view"
            style="@style/ScheduleTextView"
            android:text="Шматков Сергей Игоревич" />

        <TextView
            android:id="@+id/schedule_time_text_view"
            style="@style/ScheduleTextView"
            android:text="08.30-09.40" />

        <TextView
            android:id="@+id/schedule_room_text_view"
            style="@style/ScheduleTextView"
            android:layout_weight="1.2"
            android:text="542" />

    </LinearLayout>

</LinearLayout>