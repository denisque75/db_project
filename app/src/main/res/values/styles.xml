<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorButtonNormal">@color/primaryColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="dialog_slide_animation">
        <item name="android:windowEnterAnimation">@anim/slidestart</item>
        <item name="android:windowExitAnimation">@anim/slideend</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textSize">31sp</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextSchedule" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextInfoSchedule" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="ScheduleTextView" parent="TextInfoSchedule">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/schedule_info_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rectangle</item>
    </style>

    <style name="ScheduleStaticTextView" parent="TextInfoSchedule">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rectangle</item>
    </style>
    
    <style name="FloatingActionButtonStyle">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
    </style>

    <style name="DialogSpinner">
        <item name="android:layout_marginEnd">@dimen/dialog_margin</item>
        <item name=" android:layout_marginStart">@dimen/dialog_margin</item>
        <item name="android:layout_marginTop">@dimen/dialog_margin</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
    </style>

    <style name="DialogTextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dialog_margin</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dialog_margin</item>
        <item name="android:layout_marginTop">@dimen/dialog_margin</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/dialog_text_size</item>
    </style>

</resources>